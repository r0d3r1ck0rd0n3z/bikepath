<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/header</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/header</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">#FF0000</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:showDividers">middle</item>
    </style>
    <style name="numeralStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">#61A3D7</item>
    </style>
    <style name="MoreInfoTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/header</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="buttonStyle">@style/AboutButtonStyles</item>
    </style>
    <style name="AboutButtonStyles" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="AboutTextViewStyles" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <style name="AboutHeaderStyles" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Separators" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/topbar</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
    <style name="PreferenceThemeOverlay" parent="@style/AppTheme">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>
</resources>